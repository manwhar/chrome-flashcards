{
  "name": "Flashcards",
  "description": "Chrome Flashcards INDEV",
  "version": "1.0",
  "permissions": ["storage", "activeTab", "scripting"],
  "host_permissions": ["<all_urls>"], 
  "manifest_version": 3,
  "action": {
    "default_popup": "popup.html",
    "default_icon": "images/ChromeIcon.png"
  },
  "background": {
    "service_worker": "background.js",
    "persistent": false
  }
}